# service_nginx.conf

server {
    listen 80;

    server_name ${SERVICE_HOSTNAME};

    location ^~ /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        return 301 https://$host:4434$request_uri;
    }
}

server {
    listen 4434 ssl;

    server_name ${SERVICE_HOSTNAME};

    ssl_certificate /etc/letsencrypt/live/${SERVICE_HOSTNAME}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/${SERVICE_HOSTNAME}/privkey.pem;

    ssl_protocols TLSv1.2 TLSv1.3;

    location ^~ /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }


    # Путь к frontend
    location / {
        root   /usr/share/nginx/service-frontend/dist;
        index  index.html index.htm;
        try_files $uri /index.html;
    }


    # Перенаправляем все api запросы на джангу
    location /api {
        proxy_pass http://backend:8000;
        client_max_body_size 10M;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Путь к медиа файлам
    location /api/media/ {
        alias /usr/src/app/media/;
    }

    location /api/static/ {
        alias /usr/src/app/static/;
    }
}
